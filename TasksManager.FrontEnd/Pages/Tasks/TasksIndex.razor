@page "/tasks"
@inject IRepository repository;

<h3>Tasks</h3>
@if (Tasks == null)
{
    <p>Cargando...</p>
}
else
{
    <a class="btn btn-sm btn-outline-primary" href="/tasks/create">New Task</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Date</th>
                <th>Is Completed</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Tasks)
            {
                <tr>
                    <td>@task.Id</td>
                    <td>@task.Description</td>
                    <td>@task.Date</td>
                    <td>@task.IsCompleted</td>
                    <td>
                        <a class="btn btn-sm btn-outline-warning" href="/tasks/edit/@task.Id">Edit</a>
                        <button class="btn btn-sm btn-outline-info" onclick="">Complete</button>
                        <button class="btn btn-sm btn-outline-danger" onclick="">Delete</button>
                    </td>
                </tr>
            }           
        </tbody>
    </table>
}

@code {
    public List<MyTask>? Tasks { get; set; }


    protected override async Task OnInitializedAsync()
    {
        var response = await repository.GetAsync<List<MyTask>>("api/MyTasks");
        if (response.IsSuccess)
        {
            Tasks = response.Result;
        }
    }
}
